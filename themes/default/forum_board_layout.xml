<?xml version="1.0" encoding="utf-8"?>

<faabmod>
<layout>
	{start_mark: board}
	<div class="category_block">
		<div class="maintitle">
			{var: title}
		</div>
		<table class="table">
			<tbody>
				{start_mark: forum}
				<tr>
					<td width="1%">
						<a href="" title="Mark forum as read?" class="forum_marker">
							<img src="{var: TemplateManager::getResourcePath()}/images/cat_unread.png" alt="Unread category" title="Mark as read" />									
						</a>			
					</td>
					<td>
						<h4><a href="http://rankupforum.com/forum/4-news-bulletin/" title="Go to forum">{var: name}</a></h4>
						<p class="desc">{var: desc}</p>					
					</td>
					<td width="20%">
											<ul class="data">
												<li>
													<p class="category_data">
														<span>Post:</span> {var: posts} <br />
														<span>Threads:</span> {var: threads}
													</p>
												
												</li>
											</ul>
										</td>
									<td width="30%">
										
										<ul class="last_post">
										{start_mark: last_post}
												<li><strong><a href="{var: url}" title="Go to the first unread post: {var: title}">{var: title}</a></strong></li>
													<li><div class="smalltext">
														<a href="{var: url}" title="View last post">{var: date}</a>
													
														By:
														
																<a href="{var: lastposterurl}" title="View Profile">{var: username}</a> <a href="{var: lastposterurl}" title="View Profile"><img src="http://rankupforum.com/public/style_images/velvet-blue/user_popup.png" alt="" /></a>
															

														<div class="stats_arrow"><a href="{var: url}" title="View last post"><img src="http://rankupforum.com/public/style_images/velvet-blue/last_post.png" alt="Icon" title="View last post" /></a></div>
													</div></li>
										{end_mark: last_post}
											</ul>
									</td>
										
				</tr>
				{end_mark: forum}
				{mark: board_body}
			</tbody>
		</table>
	</div>
	{end_mark: board}
</layout>
</faabmod>